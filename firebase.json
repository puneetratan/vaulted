{
  "storage": {
    "rules": "storage.rules"
  },
  "functions": [
    {
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "source": "functions",
      "secrets": ["SMTP_USER", "SMTP_PASS", "OPENAI_API_KEY", "BARCODE_SPIDER_TOKEN"]
    }
  ],
  "emulators": {
    "functions": {
      "host": "0.0.0.0",
      "port": 5001
    },
    "ui": {
      "host": "0.0.0.0",
      "enabled": true,
      "port": 4000
    },
    "firestore": {
      "port": 8080
    }
  }
}
